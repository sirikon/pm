{
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--config-file",
        "${workspaceFolder}/mypy.ini"
    ],
    "python.linting.ignorePatterns": ["task"],
    "python.formatting.provider": "autopep8",
    "files.exclude": {
        "**/__pycache__": true,
        ".mypy_cache": true,
        ".venv": true,
        "pyinstaller": true
    }
}